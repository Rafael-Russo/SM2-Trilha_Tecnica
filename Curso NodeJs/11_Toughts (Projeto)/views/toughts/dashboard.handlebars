<div class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="btn">Criar Tought</a>
  </div>
  <h3>Seus Toughts</h3>
  <ul>
    {{#each toughts}}
      <li>
        <span class="label">{{this.title}}</span>
        <span class="actions">
          <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
          <form action="/toughts/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}" />
            <input type="submit" value="Excluir" class="btn" />
          </form>
        </span>
      </li>
    {{/each}}
  </ul>
  {{#if emptyToughts}}
    <p>Ainda n√£o tem nada aqui,
      <a href="/toughts/add">clique aqui!</a>
      para criar o seu primeiro Tought</p>
  {{/if}}
</div>